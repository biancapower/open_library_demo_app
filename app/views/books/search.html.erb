<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Search for books</h1>

  <%= form_tag(search_books_path, method: :get, class: 'flex mb-6') do %>
    <%= label_tag :query, 'Search query:', class: 'mr-2 self-center' %>
    <%= text_field_tag :query, params[:query], class: 'border border-gray-300 rounded-md px-2 py-1 mr-2 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent' %>
    <%= submit_tag 'Search', class: 'bg-blue-600 text-white px-4 py-1 rounded-md' %>
  <% end %>

  <% if @results.present? %>
    <table class="w-full border-collapse">
      <thead>
        <tr class="bg-gray-200">
          <th class="border border-gray-300 px-4 py-2 font-semibold">Title</th>
          <th class="border border-gray-300 px-4 py-2 font-semibold">Author</th>
        </tr>
      </thead>
      <tbody>
        <% @results.each_with_index do |result, index| %>
          <tr class="<%= index.odd? ? 'bg-gray-100' : '' %>">
            <td class="border border-gray-300 px-4 py-2"><%= result['title'] %></td>
            <td class="border border-gray-300 px-4 py-2"><%= result['author_name']&.join(', ') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-600">No results found.</p>
  <% end %>
</div>
